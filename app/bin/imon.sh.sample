#!/bin/bash

# Переход в директорию, где расположен скрипт
cd "$(dirname "$0")"

# Скрипт для запуска монитора через крон или удаленно без предварительной активации venv

# Получаем параметры, с которыми запущен bash скрипт
params="$@"

# Запускаем python3 скрипт с полученными параметрами
source ./venv/bin/activate
python3 imon.py $params
